{% extends 'base.html.twig' %}


{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container py-5">
    <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
    <div class="card shadow-sm">
    <div class="card-body p-4">

<div class="text-center mb-4">
  <img 
    src="{{ asset('images/legendary-logo.png') }}" 
    alt="Legendary Logo" 
    class="img-fluid mx-auto d-block"
    style="max-height: 80px; width: auto;">
</div>


    <h1 class="h3 mb-4 font-weight-normal text-center">Register Your Account</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { attr: {'data-turbo': 'false'} }) }}

    {{ form_row(registrationForm.firstName) }}
    {{ form_row(registrationForm.lastName) }}
<div class="mb-3">
    {{ form_label(registrationForm.email) }}
    {{ form_widget(registrationForm.email) }}
    {{ form_errors(registrationForm.email) }}
</div>

    {{ form_row(registrationForm.plainPassword, {
            label: 'Password' }) }}

<p style="font-size: 0.9rem; color: #555; margin: 15px 0;">
            <strong> Terms and Conditions </strong>
            <br />
            All Information on this site is <strong>Private, Confidential, and Proprietary.</strong>
            Do not share with external parties. Copyright Â© Afrihost 2025.
</p>

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

         </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
