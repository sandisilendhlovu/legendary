{% extends 'base.html.twig' %}

{% form_theme resetForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body p-4 text-center">
          <img 
            src="{{ asset('images/legendary-logo.png') }}" 
            alt="Legendary Logo" 
            class="img-fluid mx-auto d-block mb-4"
            style="max-height: 80px; width: auto;">

          {% for label, messages in app.flashes %}
          {% for message in messages %}
          <div class="alert alert-{{ label }} mt-2">{{ message }}</div>
          {% endfor %}
          {% endfor %}


          <h1 class="h4 mb-3">Reset Your Password</h1>
          <p class="text-muted mb-4">Enter your new password below to complete the reset process.</p>

      {% set resetAction = path('app_reset_password', {
       selector: app.request.get('selector'),
       verifier: app.request.get('verifier')
       }) %}

     {{ form_start(resetForm, {
     attr: {
    'data-turbo': 'false',
    'autocomplete': 'off',          # prevent cached form restoration
    'novalidate': 'novalidate'
      },
      method: 'POST',                    # explicitly enforce POST
    action: resetAction
     }) }}

      {# Display any global form errors (e.g. "Passwords must match") #}
      {{ form_errors(resetForm) }}

     <div class="mb-3 text-start">
        {# First Password Field (New Password) #}
        {{ form_label(resetForm.plainPassword.first) }}
        {{ form_widget(resetForm.plainPassword.first) }}
        {{ form_errors(resetForm.plainPassword.first) }}
      </div>

      <div class="mb-3 text-start">
        {# Second Password Field (Re-enter Password) #}
        {{ form_label(resetForm.plainPassword.second) }}
        {{ form_widget(resetForm.plainPassword.second) }}
        {{ form_errors(resetForm.plainPassword.second) }}
      </div>

<button type="submit" class="btn btn-primary w-100 mt-3">
  Update Password
</button>

{{ form_end(resetForm) }}

        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
