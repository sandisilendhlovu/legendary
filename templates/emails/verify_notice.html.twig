{# templates/emails/verify_notice.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Verify Your Email - Legendary</title>
</head>
<body style="font-family: Arial, sans-serif; background-color: #f8f9fa; color: #333;">
  <div style="max-width: 600px; margin: 20px auto; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <h2 style="color: #d6001c;">Welcome to Legendary!</h2>

    <p style="font-size: 16px;">
      Hi {{ user.firstName ?? 'there' }},<br><br>
      Thanks for creating an account. Please verify your email address to activate your account:
    </p>

    <p style="text-align: center; margin: 25px 0;">
      <a href="{{ verifyUrl }}" style="background-color: #d6001c; color: white; text-decoration: none; padding: 12px 24px; border-radius: 6px; font-weight: bold;">
        Verify My Email
      </a>
    </p>

    <p style="font-size: 14px; color: #777;">
      If you didn’t sign up for Legendary, you can safely ignore this message.
    </p>

    <hr style="margin: 25px 0;">
    <p style="font-size: 12px; color: #999; text-align: center;">
      This is an automated message from Legendary. Please do not reply.<br>
      © {{ "now"|date("Y") }} Legendary by Afrihost
    </p>
  </div>
</body>
</html>

