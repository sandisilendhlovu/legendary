<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Legendary{% endblock %}</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
      {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/legendary.css') }}">
      {% endblock %}

 </head>
<body>

  {# Navbar - shown on all pages except login & register #}
  {% if app.request.attributes.get('_route') not in ['app_login', 'app_register'] %}
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container-fluid">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
          <img 
            src="{{ asset('images/legendary-logo.png') }}" 
            alt="Legendary Logo"
            class="d-inline-block align-text-top me-2" 
            style="height: 40px; width: auto;"  
          >
        </a>

       <!-- Responsive toggle button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        
        <!-- Collapsible Menu -->
        <div class="collapse navbar-collapse" id="mainNavbar">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            {% if app.user %}
              <li class="nav-item">
                <a class="nav-link" href="#">Hello, {{ app.user.firstName ?? app.user.email }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_register') }}">Register</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
  {% endif %}

  {% block body %}{% endblock %}

  {# Bootstrap JS #}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  {% block javascripts %}
  {% block importmap %}{{ importmap('app') }}{% endblock %}
  {% endblock %}

</body>

</html>
